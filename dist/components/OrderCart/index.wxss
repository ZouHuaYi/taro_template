
.OrderCart-box {
  width: 100%;
}
.order-title {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 20rpx 0;
  overflow: hidden;
  font-size: 30rpx;
  border-bottom: 1rpx solid #EFEFEF;
}
.order-title .tit-left {
  float: left;
}
.order-title .tit-right {
  float: right;
  color: #0CCCBB;
}
.shop-detail {
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.shop-detail .shop-img {
  width: 200rpx;
  height: 200rpx;
}
.shop-detail .shop-img .img {
  display: block;
  width: 100%;
  height: 100%;
}
.shop-detail .shop-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  margin-left: 20rpx;
  height: 200rpx;
  position: relative;
}
.shop-detail .shop-right .shop-title,
.shop-detail .shop-right .shop-price {
  display: block;
}
.shop-detail .shop-right .shop-title {
  font-size: 32rpx;
  padding: 10rpx 0;
  width: 100%;
  display: -webkit-box !important;
  word-break: break-all;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.shop-detail .shop-right .shop-price {
  position: absolute;
  bottom: 0;
  font-size: 34rpx;
  color: #36E6C9;
}
.shop-detail .shop-right .shop-number {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 30rpx;
}
