
.cart-box {
  width: 100%;
}
.cart-list {
  width: 100%;
  padding: 30rpx 30rpx 90rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.circle {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border: 1Px solid #cccccc;
  border-radius: 50%;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.circle-icon {
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.cart-item {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.cart-item .delete {
  position: absolute;
  font-size: 30rpx;
  right: 0;
  top: 0;
  color: #939393;
}
.cart-item .shop-img {
  width: 150rpx;
  height: 150rpx;
  margin-left: 60rpx;
}
.cart-item .shop-img .img {
  display: block;
  width: 100%;
  height: 100%;
}
.cart-item .shop-text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  margin-left: 20rpx;
  margin-right: 40rpx;
}
.cart-item .shop-text .shop-tit {
  padding-top: 5rpx;
  font-size: 30rpx;
  line-height: 38rpx;
  display: -webkit-box !important;
  word-break: break-all;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.cart-item .shop-text .shop-type {
  display: block;
  margin: 20rpx 0;
}
.cart-item .add-number {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 40rpx;
  line-height: 40rpx;
}
.cart-item .add-number .btn {
  display: inline-block;
  width: 40rpx;
  border: 1rpx solid #cccccc;
  text-align: center;
}
.cart-item .add-number .btn-center {
  display: inline-block;
  width: 60rpx;
  text-align: center;
  border-top: 1rpx solid #cccccc;
  border-bottom: 1rpx solid #cccccc;
}
.center-line {
  display: block;
  width: 100%;
  height: 60rpx;
  position: relative;
}
.center-line:after {
  position: absolute;
  content: " ";
  width: 100%;
  border-bottom: 1rpx solid #EFEFEF;
  top: 50%;
  left: 0;
}
.order-all {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 900;
  line-height: 90rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border-top: 1rpx solid #EFEFEF;
}
.order-all .order-select {
  position: relative;
  padding-left: 80rpx;
  float: left;
}
.order-all .order-select .circle,
.order-all .order-select .circle-icon {
  left: 30rpx;
  line-height: 0;
}
.order-all .order-right {
  float: right;
}
.order-all .order-right .order-btn {
  display: inline-block;
  padding: 0 30rpx;
  background: #0CCCBB;
  color: #FFFFFF;
}
.order-all .order-right .order-price {
  display: inline-block;
  padding: 0 30rpx;
  color: #0CCCBB;
}
