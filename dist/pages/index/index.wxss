
.page,
.page-container {
  height: 100vh;
  overflow: hidden;
}
.index-box {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
      -ms-flex-direction: column;
          flex-direction: column;
}
.index-box .index-content {
  width: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  overflow: hidden;
}
.index-box .index-content .index-banner {
  width: 100%;
  height: 100%;
}
.index-box .index-content .index-banner .index-banner-item {
  width: 100%;
  height: 100%;
}
.index-sroll {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}
.index-sroll .index-scroll-box {
  width: 100%;
  padding-bottom: 200rpx;
}
.tab-nav-box {
  width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
}
.tab-nav-box::-webkit-scrollbar {
  display: none;
}
.tab-nav-box .tab-nav-list {
  white-space: nowrap;
  height: 80rpx;
  line-height: 80rpx;
}
.tab-nav-box .tab-nav-list .tab-nav-item {
  display: inline-block;
  height: 100%;
  vertical-align: top;
  font-size: 32rpx;
  padding: 0 20rpx;
  color: #707070;
}
.shopping-hot-scroll {
  width: 100%;
  padding: 30rpx 0 40rpx;
}
.shopping-hot-list {
  width: 100%;
  white-space: nowrap;
}
.shopping-hot-list .shopping-hot-item {
  display: inline-block;
  width: 230rpx;
  height: 230rpx;
  margin: 0 10rpx;
}
.shopping-hot-list .shopping-hot-item .shopping-img {
  display: block;
  width: 100%;
  height: 100%;
}
.shopping-content {
  width: 100%;
}
.shopping-content .shopping-title {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 30rpx;
}
.shopping-content .shopping-title .shoping-title-text {
  display: inline-block;
  padding-left: 30rpx;
  position: relative;
  font-size: 32rpx;
  vertical-align: top;
}
.shopping-content .shopping-title .shoping-title-text:after {
  position: absolute;
  content: " ";
  height: 32rpx;
  border-left: 3Px solid #0CCCBB;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.shop-list {
  width: 100%;
  overflow: hidden;
}
.shop-list .shop-item {
  width: 355rpx;
  margin: 0 10rpx 20rpx;
  border-radius: 12rpx;
  border: 1Px solid #E3E3E3;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  overflow: hidden;
  float: left;
}
.shop-list .shop-item .shop-img .img {
  display: block;
  width: 100%;
  height: 354rpx;
}
.shop-list .shop-item .shop-main {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10rpx;
}
.shop-list .shop-item .shop-main .shop-main-title {
  font-size: 30rpx;
  line-height: 40rpx;
  height: 80rpx;
}
.shop-list .shop-item .shop-main .shop-main-sub {
  font-size: 26rpx;
  line-height: 32rpx;
  height: 64rpx;
  padding-top: 10rpx;
  color: #7E7D82;
}
.shop-list .shop-item .shop-main .shop-main-sub,
.shop-list .shop-item .shop-main .shop-main-title {
  width: 100%;
  display: -webkit-box !important;
  word-break: break-all;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.shop-list .shop-item .shop-main .shop-price {
  padding-bottom: 10rpx;
  height: 34rpx;
}
.shop-list .shop-item .shop-main .shop-price .true-p {
  display: inline-block;
  font-size: 32rpx;
  color: #0CCCBB;
}
.shop-list .shop-item .shop-main .shop-price .false-p {
  display: inline-block;
  margin-left: 30rpx;
  color: #7E7D82;
  font-size: 28rpx;
  position: relative;
}
.shop-list .shop-item .shop-main .shop-price .false-p:after {
  position: absolute;
  content: " ";
  width: 100%;
  border-bottom: 1Px solid #7E7D82;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.shop-list .shop-item .shop-main .shop-buy-number {
  padding-bottom: 10rpx;
}
.shop-list .shop-item .shop-main .shop-buy-number .num {
  font-size: 24rpx;
  color: #969696;
}
