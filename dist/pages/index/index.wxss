
.index-box {
  width: 100%;
}
.index-banner {
  width: 100%;
  height: 450rpx;
}
.index-banner .banner-item {
  width: 100%;
}
.index-banner .banner-item .img {
  display: block;
  width: 100%;
}
.index-container {
  width: 100%;
  margin-bottom: 20rpx;
}
.index-container .cont-image {
  width: 100%;
  height: 355rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 15rpx;
  overflow: hidden;
}
.index-container .cont-image .big-img {
  float: left;
  width: 355rpx;
  height: 355rpx;
  overflow: hidden;
  line-height: 355rpx;
}
.index-container .cont-image .big-img .img {
  vertical-align: middle;
  width: 100%;
  border-radius: 10rpx;
}
.index-container .cont-image .small-img {
  float: right;
  width: 355rpx;
  height: 355rpx;
}
.index-container .cont-image .small-img .s-item {
  width: 100%;
  height: 172.5rpx;
  overflow: hidden;
  border-radius: 10rpx;
}
.index-container .cont-image .small-img .s-item:first-child {
  margin-bottom: 10rpx;
}
.index-container .cont-image .small-img .img {
  display: block;
  width: 100%;
}
.pro-title {
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 30rpx 20rpx 10rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.index-product {
  width: 100%;
  margin-bottom: 20rpx;
}
.index-product .product-scroll {
  width: 100%;
}
.index-product .product-scroll .product-list {
  width: 100%;
  white-space: nowrap;
}
.index-product .product-scroll .product-list .product-item {
  display: inline-block;
  width: 264rpx;
  margin: 0 15rpx;
  border: 1rpx solid #cfcfcf;
  border-radius: 16rpx;
  overflow: hidden;
}
.index-product .product-scroll .product-list .product-item .img {
  display: block;
  width: 100%;
  height: 264rpx;
}
.index-product .product-scroll .product-list .product-item .item-content {
  padding: 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  white-space: normal;
}
.index-product .product-scroll .product-list .product-item .item-content .item-header {
  font-size: 28rpx;
  line-height: 36rpx;
  height: 72rpx;
  width: 100%;
  display: -webkit-box !important;
  word-break: break-all;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.index-product .product-scroll .product-list .product-item .item-content .item-price {
  width: 100%;
  padding: 10rpx 0 5rpx;
}
.index-product .product-scroll .product-list .product-item .item-content .item-price .txt,
.index-product .product-scroll .product-list .product-item .item-content .item-price .no-txt {
  display: inline-block;
  font-size: 30rpx;
  color: #15CEBC;
}
.index-product .product-scroll .product-list .product-item .item-content .item-price .no-txt {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999999;
  position: relative;
}
.index-product .product-scroll .product-list .product-item .item-content .item-price .no-txt:after {
  position: absolute;
  content: " ";
  width: 110%;
  border-bottom: 1rpx solid #cccccc;
  left: -5%;
  top: 50%;
}
.index-product .product-scroll .product-list .product-item .item-content .self {
  color: #999999;
}
.bgk-line {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
  margin: 20rpx 0;
}
